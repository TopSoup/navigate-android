<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.topsoup.navigate"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="22"
        android:targetSdkVersion="26" />

    <!-- 定位 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 接收短信 -->
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <!-- 读取联系人 -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- 读短信权限 -->
    <uses-permission android:name="android.permission.READ_SMS" />
    <!-- 发送短信 -->
    <uses-permission android:name="android.permission.SEND_SMS" />
    <!-- 拨打电话 -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.WRITE_CALL_LOG" />
    <!-- 全局对话框 -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <!-- 电源锁 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="com.topsoup.navigate.AppConfig"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.topsoup.navigate.activity.TestActivity" >
        </activity>
        <activity
            android:name="com.topsoup.navigate.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.topsoup.navigate.activity.MyInfoActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.topsoup.navigate.activity.NavigateListMainActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.topsoup.navigate.activity.NavigateListActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.topsoup.navigate.activity.LoteInfoActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.topsoup.navigate.activity.NavigateActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.topsoup.navigate.activity.ContactActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.topsoup.navigate.activity.SendLocateActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.topsoup.navigate.activity.SOSActivity"
            android:launchMode="singleTask"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.topsoup.navigate.activity.SettingsActivity"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.topsoup.navigate.activity.AuthorizeActivity"
            android:screenOrientation="nosensor"
            android:theme="@android:style/Theme.Holo.Light.Dialog"
            android:windowSoftInputMode="stateHidden" />

        <service android:name="com.topsoup.navigate.service.MyService" />

        <receiver android:name="com.topsoup.navigate.receiver.Boot" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.topsoup.navigate.receiver.KeyReceiver" >
            <intent-filter>
                <action android:name="android.action.sos" />
                <action android:name="android.com.sos" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" />
        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />
    </application>

</manifest>